<!DOCTYPE html>
<html ng-app="OpenPOS">

<head>
	<meta charset="utf-8">
	<title>OpenPOS</title>
	
	<base href="/" />
	
	<link rel="stylesheet" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/style.css" />
	<link href="public/css/_style.css" rel="stylesheet" />
</head>

<body data-ng-controller="PosController">
	<div class="container">
		<div class="header clearfix">
			<nav>
				<ul class="nav nav-pills pull-right">
					{{#if user}}
					<li role="presentation"><a href="/">OpenPOS</a></li>
					<li role="presentation"><a href="/users/logout">Logout</a></li>
					{{else}}
					<li role="presentation"><a href="/users/login">Login</a></li>
					<li role="presentation"><a href="/users/register">Register</a></li>
					{{/if}}
				</ul>
			</nav>
			<h3 class="text-muted">OpenPOS: A Simple, Open Source POS System</h3>
		</div>

		<div class="row">
			<div class="col-lg-12">
				{{#if success_msg}}
				<div class="alert alert-success">{{success_msg}}</div>
				{{/if}} {{#if error_msg}}
				<div class="alert alert-danger">{{error_msg}}</div>
				{{/if}} {{#if error}}
				<div class="alert alert-danger">{{error}}</div>
				{{/if}} {{{body}}}
			</div>
		</div>

		<footer class="footer">
			<p>&copy; 2017 David Kim</p>
		</footer>

	</div>
	<!-- /container -->
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular.js"></script>
<script src="_app.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.5.0/ui-bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</html>
<script>
	$(document).ready(function() {
		$("#myTab a").click(function(e) {
			e.preventDefault();
			$(this).tab('show');
		});
	});

</script>